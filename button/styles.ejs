<% const fonts = require('../styles/fonts') %>
<% const colors = require('../styles/colors') %>

<style>
    @keyframes progress-bar-stripes {
        from {
            background-position: 40px 0;
        }
        to {
            background-position: 0 0;
        }
    }

    b-button {
        display: inline-block;
        vertical-align: middle;
        text-transform: uppercase;
        font-weight: 500;
    }

    b-button a, b-button button {
        color: #fff;
        display: inline-block;
        text-align: center;
        padding: 0 16px;
        height: 36px;
        line-height: 36px;
        position: relative;
        cursor: pointer;
        transition: color 0.2s, background-color 0.2s, transform 0.2s, box-shadow 0.2s;
        vertical-align: middle;
        font-size: 14px;
        background-color: <%- colors.primary %>;
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        border: none;
        outline: none;
        font-family: <%- fonts.roboto %>;
        border-radius: 2px;
        min-width: 64px;
        box-sizing: content-box;
        box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.37);
    }

    b-button[disabled] {
        background-color: rgba(0, 0, 0, 0.12);
        color: rgba(0, 0, 0, 0.26);
        box-shadow: none !important;
        cursor: default;
    }

    b-button[loading] {
        animation: progress-bar-stripes 2s linear infinite;
        background-size: 40px 40px !important;
        background-image: linear-gradient(45deg, rgba(255, 255, 255, .25) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .25) 50%, rgba(255, 255, 255, .25) 75%, transparent 75%, transparent) !important;
    }

    b-button input {
        display: none;
    }

    b-button b-icon {
        margin: 0 8px 0 -8px;
    }

    b-button b-icon:last-child {
        margin: 0;
    }

    b-button[color="accent"] {
        background-color: <%- colors.accent %>;
    }

    b-button[color="warning"] {
        background-color: #F9A825;
    }

    b-button[color="danger"] {
        background-color: #E53935;
    }

    .button[flat="true"][color="danger"] {
        color: #E53935;
    }

    .button a:hover, .button button:hover {
        box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.37);
    }

    .button[flat="true"]:not([disabled]):hover {
        background-color: fade(<%- colors.primary %>, 12%);
    }

    .button[flat="true"] {
        background-color: transparent;
        box-shadow: none !important;
        color: <%- colors.primary %>;
    }

    .button[flat="true"][disabled="true"] {
        background-color: transparent;
    }
</style>
