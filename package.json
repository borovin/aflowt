{
  "name": "@basket/block",
  "description": "UI blocks based on Custom Elements v1 spec.",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/borovin/block.git"
  },
  "homepage": "https://github.com/borovin/block",
  "scripts": {
    "prepublishOnly": "npm run build:production",
    "build": "gulp",
    "build:production": "gulp --production",
    "build:coverage": "gulp --coverage",
    "start": "serve",
    "test": "ava",
    "test:coverage": "npm run build:coverage && nyc ava",
    "test:codestyle": "eslint ./src",
    "istanbul": "istanbul"
  },
  "author": "a@borovin.com",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "commonjs": true,
      "browser": true,
      "jest": true
    }
  },
  "dependencies": {
    "morphdom": "^2.2.1",
    "query-string": "^4.3.4"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-plugin-istanbul": "^4.1.3",
    "eslint": "^3.19.0",
    "fs-extra": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-cli": "^1.2.2",
    "gulp-csso": "^3.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.2.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-wrap": "^0.13.0",
    "lodash": "^4.17.2",
    "nightmare": "^2.10.0",
    "nyc": "^10.3.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^3.0.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "serve": "^5.0.3",
    "yargs": "^7.1.0"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text-summary",
      "lcovonly",
      "html"
    ],
    "cache": true,
    "all": true
  }
}
