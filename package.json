{
  "name": "@basket/block",
  "description": "extended backbone view",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/borovin/block.git"
  },
  "homepage": "https://github.com/borovin/block",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:codestyle": "eslint ."
  },
  "author": "a@borovin.com",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "commonjs": true,
      "browser": true,
      "jest": true
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "jest": {
    "setupFiles": [
      ".jestSetup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80
      }
    }
  },
  "dependencies": {
    "morphdom": "^2.2.1"
  },
  "devDependencies": {
    "webcomponents.js": "^0.7.23",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.10.2",
    "jest": "^17.0.3",
    "@webcomponents/custom-elements": "^1.0.0-alpha.3"

  }
}
